{
  "extends": ["config:base", ":dependencyDashboard"],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV\\s+GIT_VERSION=(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)"],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "git/git",
      "depNameTemplate": "git"
    },
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV\\s+TAR_VERSION=(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)"],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "Distrotech/tar",
      "depNameTemplate": "tar"
    },
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV\\s+GZIP_VERSION=(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)"],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "madler/gzip",
      "depNameTemplate": "gzip"
    }
  ]
}
